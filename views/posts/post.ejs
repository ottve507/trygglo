<% layout('../layouts/layout') -%>
<ul class="quotes">
	<%posts.forEach(function(element){%>
        <li>
			<a href="/posts/<%= element._id %>">
			<%=element.name%></a> <br>
			<%=element.text%> <br>
			<%=element.address%> <br>
			<%=element.user.username  %>
		</li>
		<br>
     <%});%>
</ul>

